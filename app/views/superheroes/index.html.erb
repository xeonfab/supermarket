
<div class="banner-home1">
  <div class="search-container">
    <div class="row">
        <%= form_tag superheroes_path, method: :get do %>
         <div class="d-flex search-btn">
            <div class="search-form-control index-search form-group">
              <%= form_tag superheroes_path, method: :get do %>
                <%= text_field_tag :query,
                  params[:query],
                  class: "form-control string required",
                  placeholder: "Search a superhero, city..." %>
                <%= submit_tag "Search", class: "btn btn-flat" %>
              <% end %>
            </div>
          </div>
        <% end %>
        <div id="superheroes">
          <% @superheroes.each do |superhero| %>
          <% end %>
        </div>
      </div>
  </div>
</div>


<div class="results-container">
  <div class="left-container">
    <% @superheroes.each do |superhero| %>
     <%= render partial: 'shared/card2', locals: { superhero: superhero } %>
    <% end %>
  </div>

  <div
    id="map" class="map-fullpage map-index"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>
