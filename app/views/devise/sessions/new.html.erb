<div class="signup-container">
  <div class="container2">
      <h2>Log in</h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" },
                      label_html: { class: 'inputlabel'}  %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" },
                      label_html: { class: 'inputlabel'}  %>
          <%= f.input :remember_me, as: :boolean, label_html: { class: 'inputlabel'} if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Log in", class: 'bookings-btn' %>
        </div>
      <% end %>
      <br>

   <%= render "devise/shared/links", class: 'inputlabel'%>
  </div>
</div>
