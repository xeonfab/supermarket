<div class="banner-home1">
    <nav class="nav1" style="">
      <a class="nav1-link" href="<%= account_my_superheroes_path %>">My Superheroes</a>
      <a class="nav1-link active" href="<%= account_my_bookings_path %>">Bookings</a>
       <a class="nav1-link" href="<%= account_my_profile_path %>">Profile</a>
    </nav>
</div>

<div class="account-container">
  <% @my_bookings.each do |mybooking| %>
    <div class="account-card">
      <div class="card-main">
        <div id="img-book">
          <%= cl_image_tag mybooking.superhero.photo.key, alt: "alttext", width: 200, height: 300 %>
        </div>
        <div class="booking-page-split">
          <div class="name-desc">
            <h2><%= mybooking.superhero.name %></h2>
            <p>Description: <%= mybooking.superhero.description %></p>
          </div>
          <div class="content-hub d-flex">
            <div class="column width1">
              <p>Age: <%= mybooking.superhero.age %></p>
              <p>Superpower: <%= mybooking.superhero.superpower %></p>
              <p>Brains: <%= mybooking.superhero.brains %></p>
            </div>
            <div class="column width2">
              <p>Strength: <%= mybooking.superhero.strength %></p>
              <p>Speed: <%= mybooking.superhero.speed %></p>
              <p>Location: <%= mybooking.superhero.location %></p>
            </div>
          </div>
        </div>
        <div class ="account-options">
          <%= link_to "Add review", new_superhero_booking_review_path(mybooking.superhero, mybooking), class: "btn btn-gradient" %>
          <p>Price: <%= mybooking.superhero.price %></p>
        </div>

      </div>

  <% end %>
</div>

