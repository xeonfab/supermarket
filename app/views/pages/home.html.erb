<div class="banner-home">
  <div class="container-home">
    <div class="d-flex">
      <div class="left-home">
        <h1>Need a saviour? Rent one.</h1>
        <div class="search-form-control form-group">
          <%= form_tag superheroes_path, method: :get do %>
            <%= text_field_tag :query,
              params[:query],
              class: "form-control string required",
              placeholder: "Find a Superhero" %>
            <%= submit_tag "Search", class: "btn btn-flat" %>
          <% end %>
          <div id="superheroes">
          <% @superheroes.each do |superhero| %>
          <% end %>
          </div>
        </div>
      </div>
      <div class="spidercards">
        <%= image_tag "spidercards.png", alt: "Spidercards", height: 450 %>
      </div>
     </div>
   </div>
</div>

<div class="main-container">

  <% @superheroes.each do |superhero| %>
    <%= render partial: 'shared/card', locals: { superhero: superhero } %>
  <% end %>

</div>



