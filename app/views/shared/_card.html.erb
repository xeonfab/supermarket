<%= link_to superhero_path(superhero), class: "card-link-wrap" do %>
<div class="card-superhero">
  <% if superhero.photo.attached? %>
    <%= cl_image_tag superhero.photo.key, height: 232.43, width: 281.48 %>
   <% elsif superhero.image %>
     <%= image_tag superhero[:image], alt: "alttext", class: "card-img-top"  %>
  <% else %>
    <p>no photo</p>
  <% end %>
  <div class="card-superhero-infos">
    <h6><strong><i class="fas fa-bolt"></i>  </strong><%= superhero.superpower %> </h6>
    <p><strong><i class="fas fa-street-view"></i>  </strong><%= superhero.location %></p>
    <p class="price">$<%= superhero.price %></p>
  </div>
</div>
<% end %>

